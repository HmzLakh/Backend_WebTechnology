{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "importHelpers": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "rootDir": "src",
        "outDir": "dist",
        "typeRoots": ["./src/typings", "./node_modules/@types"]
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}
